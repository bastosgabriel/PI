import bluetooth

hostMACAddress = '00:11:67:60:6d:35' # The MAC address of a Bluetooth adapter on the server. The server might have multiple Bluetooth adapters.
port = 'COM5'
backlog = 1
size = 1024
s = bluetooth.BluetoothSocket(bluetooth.SOCK_STREAM, bluetooth.BTHPROTO_RFCOMM)
s.bind((hostMACAddress, port))
s.listen(backlog)
try:
    client, clientInfo = s.accept()
    while 1:
        data = client.recv(size)
        if data:
            print(data)
            client.send(data) # Echo back to client
except:
    print("Closing socket")
    client.close()
    s.close()
